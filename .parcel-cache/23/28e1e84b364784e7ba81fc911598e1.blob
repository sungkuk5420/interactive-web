body {
        background-color: #312a2a;
      }
      h1 {
        color: #fff;
      }
      .bg-image{
          position: fixed;
          width:100%;
          height: 100%;
          background-image: url("./bg.png");
          background-size: contain;
          background-position: center bottom;
          background-repeat: no-repeat;
      }
      .monster-image {
        position: absolute;
        width: auto;
        height: auto;
        margin-left: -202.5px;
        margin-top: -206px;
      }
      .pumpkin__left-eyes{
        top: 30px;
        left: -60px;
      }
      .pumpkin__right-eyes{
        top: 30px;
        left: 60px;
      }
      .pumpkin__left-eyes,
      .pumpkin__right-eyes{
          position: absolute;
          background: yellow;
          width: 12px;
          height: 12px;
          border-radius: 50%;
      }
      .pumpkin-wrapper{
          position: fixed;
          top:50%;
          left: 50%;
      }